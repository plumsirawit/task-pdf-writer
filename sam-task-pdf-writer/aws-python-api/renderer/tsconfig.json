{
    "compilerOptions": {
        "target": "ES2015",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "outDir": "dist",
        "declaration": true,
        "baseUrl": ".",
        "typeRoots": ["./node_modules/@types"]
    },
    "include": ["./src/**/*.ts"],
    "exclude": ["node_modules"],
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        },
        "experimentalSpecifierResolution": "node"
    }
}
